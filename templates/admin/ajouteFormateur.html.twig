{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('styles/adminDashboard.css') }}" type="text/css">
	<link rel="stylesheet" href="{{ asset('styles/ajouteFormateur.css') }}" type="text/css">
{% endblock %}

{% block body %}
<section class="main">
    <div class="title">
        <h1>Ajouter formateur/trice </h1>
        <button onclick="toggleDropdown()">Retour</button>
    </div>                  
    <div class="input">
        <input type="text" placeholder="Nom">
        <input type="text" placeholder="Prénom">
        <input type="email" placeholder="E-mail">
        <input type="tel" placeholder="Téléphone">
        <div class="dropdown">
            <button class="dropbtn" onclick="Dropdown()">Matières</button>
            <div class="dropdown-content" id="dropdownContent" style="display: none;">
                <input type="checkbox" id="matiere1" value="Matiere 1">
                <label for="matiere1">Matiere 1</label><br>
                <input type="checkbox" id="matiere2" value="Matiere 2">
                <label for="matiere2">Matiere 2</label><br>
                <input type="checkbox" id="matiere3" value="Matiere 3">
                <label for="matiere3">Matiere 3</label><br>
            </div>
        </div>
        <button onclick="ajouterMatieres()">Ajouter</button>
    </div> 
    <div class="board">
        <table class="table">
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>E-mail</th>
                <th>Téléphone</th>
                <th>Matières</th>
                <th>Actions</th>
            </tr>
            <tr>
                <td class="column1"></td>
                <td></td>
                <td></td>
                <td></td>
                <td class="will_give"></td>
                <td></td>
            </tr>
        </table>
    </div>
</section>

<script>
    function ajouterMatieres() {
        var matieres = document.querySelectorAll('input[type="checkbox"]:checked');
        var matieresText = [];
        matieres.forEach(function(item) {
            matieresText.push(item.value);
        });
        document.querySelector('.will_give').innerText = matieresText.join(', ');
    }

    function Dropdown() {
        var dropdownContent = document.getElementById("dropdownContent");
        if (dropdownContent.style.display === "none") {
            dropdownContent.style.display = "block";
        } else {
            dropdownContent.style.display = "none";
        }
    }
</script>

{% endblock %}
